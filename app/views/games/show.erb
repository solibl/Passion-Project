
<div class = "searchStream">
	<% @users_playing.each do |streamer| %>
	<section id = 'streamerBox'>

		<h1><a href="/users/<%= streamer.id %>"><%= streamer.username %></a></h1>

		<script src= "https://player.twitch.tv/js/embed/v1.js"></script>
		<div id="<%=streamer.username%>"></div>
		<script type="text/javascript">
			var options = {
				width: 500,
				height: 300,
				channel: "<%=streamer.username%>",
				autoplay: false,
				video: "<video ID>",
				collection: "<collection ID>",
			};
			var player = new Twitch.Player("<%=streamer.username%>", options);
			player.setVolume(0.5);
		</script>

	</section>

	<% end %>
</div>